{
  "extends": "solhint:all",
  "plugins": ["prettier"],
  "rules": {
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "no-empty-blocks": "off",
    "avoid-low-level-calls": "off",
    "max-line-length": ["error", 150],
    "func-visibility": ["warn", { "ignoreConstructors": true }]
  }
}
